%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign up
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path} 
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "general-form"}) do |f|
    = devise_error_messages!
    .form-group.mb-30
      = f.label :email, class: "control-label font-weight-light"
      = f.email_field :email, class: "form-control", id: "email", placeholder: "Enter Email" , autofocus: "true"
    .form-group.mb-30
      = f.label :password, class: "control-label font-weight-light"
      = f.password_field :password, class: "form-control", id: "password", placeholder: "Password"
    .form-group.mb-30
      = f.label :password_confirmation, class: "control-label font-weight-light"
      = f.password_field :password_confirmation, class: "form-control", id: "password", placeholder: "Password confirmation", autocomplete: "off"     
    .text-center
      = f.submit "Sign up", class: "btn btn-default mb-20"
  %p.general-sign-text.text-center
    Do you have an Account?
    %a.in-gold-500{href: new_user_session_path} Log in
