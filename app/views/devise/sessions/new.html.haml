%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fa.fa-facebook-official
    %p.general-login-text or

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "general-form"}) do |f|
    .form-group.mb-30
      = f.label :email, class: "control-label font-weight-light"
      = f.email_field :email, class: "form-control", id: "email", placeholder: "Enter Email", autofocus: "true"
    .form-group.mb-30
      = f.label :password, class: "control-label font-weight-light"
      = f.password_field :password, class: "form-control", id: "password", placeholder: "Password"
      %a.help-block.in-gold-500{href: new_password_path(resource_name)} Forgot password?
    .form-group.checkbox.text-center.mb-30
      %label.font-weight-light.pl-0
        = f.check_box :remember_me, class: "checkbox-input", hidden: "true"
        %span.checkbox-icon
          %i.fa.fa-check
        = f.label :remember_me, class: "font-weight-light pl-0"
    .text-center
      = f.submit "Log In", class: "btn btn-default mb-20"
  %p.general-sign-text.text-center
    Donâ€™t have an Account?
    %a.in-gold-500{href: new_user_registration_path} Sign Up
